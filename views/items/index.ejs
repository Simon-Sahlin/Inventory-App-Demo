<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="style.css">
    <title>Inventory App</title>
</head>
<body>
    <%- include('../partials/nav.ejs') %>
    <div id="mainBody">
        <h2>All Items</h2>
        <hr>
        <div id="itemsWrapper">
            <% locals.items.forEach(item => {%>
                <div class="item">
                    <div style="<%= "background-color: hsl(" + Math.floor(Math.random() * 360) + ", 100%, 50%);" %>"></div>
                    <h3><%=item.name%></h3>
                    <p><%=item.price + "$"%></p>
                    <p class="itemSellerP">Seller: <%=item.seller_name%></p>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>